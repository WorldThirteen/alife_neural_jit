{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./node-dist",
    "moduleResolution": "node",
    "downlevelIteration": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
  }
}